class WhatsappMessage:

    def __init__(self, sender='NA', reciever='NA', mesg='NA', status='NA'):
        self.sender = sender
        self.reciever = reciever
        self.mesg = mesg
        self.status = status
        self.next = None
        self.previous = None

    def show(self):
        print("-----------------------------------------")
        print("Sender:", self.sender)
        print("Reciever:", self.reciever)
        print("Message:", self.mesg)
        print("Status:", self.status)
        print("------------------------------------------")


class WhatsappList:

    def __init__(self):
        self.head = None
        self.tail = None
        self.size = 0

    def add(self, message):
        self.size += 1
        if self.head is None:
            self.head = message
            self.tail = message
        else:
            self.tail.next = message
            message.previous = self.tail
            self.tail = message

    def iterate_forward(self):
        message = self.head
        while message is not None:
            message.show()
            message = message.next



